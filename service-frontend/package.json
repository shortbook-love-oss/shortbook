{
	"name": "shortbook-service-frontend",
	"version": "0.9.2",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"lang-compile": "paraglide-js compile --project ./i18n/service.inlang --outdir ./i18n/output",
		"schema-generate-dev": "prisma generate --schema=./lib-backend/database/schema.prisma",
		"schema-generate": "npx prisma generate --schema=./lib-backend/database/schema.prisma",
		"premigrate-dev": "node ./lib-backend/database/set_charset.js utf8mb4 utf8mb4_unicode_ci",
		"migrate-dev": "prisma migrate dev --schema=./lib-backend/database/schema.prisma --name ${npm_config_name}",
		"postmigrate-dev": "node ./lib-backend/database/set_charset.js utf8mb4 utf8mb4_bin",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest"
	},
	"dependencies": {
		"@aws-sdk/client-cloudfront": "3.716.0",
		"@aws-sdk/client-s3": "3.716.0",
		"@aws-sdk/client-ses": "3.716.0",
		"@google-cloud/translate": "^8.5.0",
		"@inlang/paraglide-js": "^1.11.3",
		"@inlang/paraglide-sveltekit": "^0.15.0",
		"@lexical/code": "^0.21.0",
		"@lexical/headless": "^0.21.0",
		"@lexical/html": "^0.21.0",
		"@lexical/link": "^0.21.0",
		"@lexical/list": "^0.21.0",
		"@lexical/rich-text": "^0.21.0",
		"@opentelemetry/api": "^1.9.0",
		"@prisma/client": "^6.1.0",
		"deepl-node": "^1.15.0",
		"file-type": "^19.6.0",
		"isomorphic-dompurify": "^2.19.0",
		"jsdom": "^25.0.1",
		"lexical": "^0.21.0",
		"libmime": "^5.3.6",
		"sharp": "^0.33.5",
		"sharp-bmp": "^0.1.5",
		"sharp-ico": "^0.1.5",
		"stripe": "^17.5.0"
	},
	"devDependencies": {
		"@iconify-json/mdi": "^1.2.2",
		"@lexical/dragon": "^0.21.0",
		"@lexical/history": "^0.21.0",
		"@lexical/selection": "^0.21.0",
		"@lexical/utils": "^0.21.0",
		"@playwright/test": "^1.49.1",
		"@sveltejs/adapter-node": "^5.2.11",
		"@sveltejs/kit": "^2.13.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@types/eslint": "^9.6.1",
		"@types/jsdom": "^21.1.7",
		"@types/libmime": "^5.0.3",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.17.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.14.0",
		"marked": "^15.0.4",
		"postcss": "^8.4.49",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.2",
		"prettier-plugin-tailwindcss": "^0.6.9",
		"prisma": "^6.1.0",
		"sass-embedded": "^1.83.0",
		"svelte": "^5.15.0",
		"svelte-check": "^4.1.1",
		"sveltekit-superforms": "^2.22.1",
		"tailwindcss": "^3.4.17",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.18.1",
		"unplugin-icons": "^0.22.0",
		"vite": "^6.0.5",
		"vitest": "^2.1.8",
		"zod": "^3.24.1"
	}
}
