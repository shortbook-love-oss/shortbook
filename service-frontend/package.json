{
	"name": "shortbook-service-frontend",
	"version": "0.7.3",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "npm run schema-generate-dev && vite dev",
		"build": "npm run schema-generate-dev && vite build",
		"preview": "vite preview",
		"schema-generate-dev": "prisma generate --schema=./lib-backend/database/schema.prisma",
		"schema-generate": "npx prisma generate --schema=./lib-backend/database/schema.prisma",
		"premigrate-dev": "node ./lib-backend/database/set_charset.js utf8mb4 utf8mb4_unicode_ci",
		"migrate-dev": "prisma migrate dev --schema=./lib-backend/database/schema.prisma --name ${npm_config_name}",
		"postmigrate-dev": "node ./lib-backend/database/set_charset.js utf8mb4 utf8mb4_bin",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest"
	},
	"dependencies": {
		"@inlang/paraglide-js": "1.11.2",
		"@inlang/paraglide-sveltekit": "0.11.0",
		"@prisma/client": "^5.20.0",
		"file-type": "^19.5.0",
		"isomorphic-dompurify": "^2.15.0",
		"libmime": "^5.3.5",
		"sharp": "^0.33.5",
		"sharp-bmp": "^0.1.5",
		"sharp-ico": "^0.1.5",
		"stripe": "^16.12.0"
	},
	"devDependencies": {
		"@aws-sdk/client-cloudfront": "^3.658.1",
		"@aws-sdk/client-s3": "^3.658.1",
		"@aws-sdk/client-ses": "^3.658.1",
		"@iconify-json/mdi": "^1.2.0",
		"@playwright/test": "^1.47.2",
		"@sveltejs/adapter-node": "^5.2.5",
		"@sveltejs/kit": "^2.5.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0-next.7",
		"@types/eslint": "^9.6.1",
		"@types/libmime": "^5.0.3",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"marked": "^14.1.2",
		"postcss": "^8.4.47",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.7",
		"prettier-plugin-tailwindcss": "^0.6.8",
		"prisma": "^5.20.0",
		"svelte": "5.0.0-next.259",
		"svelte-check": "^4.0.3",
		"sveltekit-superforms": "^2.19.0",
		"tailwindcss": "^3.4.13",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0",
		"unplugin-icons": "^0.19.3",
		"vite": "^5.0.3",
		"vitest": "^2.0.5",
		"zod": "^3.23.8"
	},
	"optionalDependencies": {
		"@esbuild/linux-x64": "0.24.0",
		"@rollup/rollup-darwin-x64": "4.22.5",
		"@rollup/rollup-linux-arm64-gnu": "4.22.5"
	}
}
