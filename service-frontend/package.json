{
	"name": "shortbook-service-frontend",
	"version": "0.8.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"lang-compile": "paraglide-js compile --project ./i18n/service.inlang --outdir ./i18n/output",
		"schema-generate-dev": "prisma generate --schema=./lib-backend/database/schema.prisma",
		"schema-generate": "npx prisma generate --schema=./lib-backend/database/schema.prisma",
		"premigrate-dev": "node ./lib-backend/database/set_charset.js utf8mb4 utf8mb4_unicode_ci",
		"migrate-dev": "prisma migrate dev --schema=./lib-backend/database/schema.prisma --name ${npm_config_name}",
		"postmigrate-dev": "node ./lib-backend/database/set_charset.js utf8mb4 utf8mb4_bin",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest"
	},
	"dependencies": {
		"@inlang/paraglide-js": "^1.11.3",
		"@inlang/paraglide-sveltekit": "^0.12.1",
		"@lexical/code": "^0.20.1",
		"@lexical/headless": "^0.20.1",
		"@lexical/html": "^0.20.1",
		"@lexical/link": "^0.20.1",
		"@lexical/list": "^0.20.1",
		"@lexical/rich-text": "^0.20.1",
		"@prisma/client": "^6.0.0",
		"file-type": "^19.6.0",
		"isomorphic-dompurify": "^2.17.0",
		"jsdom": "^25.0.1",
		"lexical": "^0.20.1",
		"libmime": "^5.3.6",
		"sharp": "^0.33.5",
		"sharp-bmp": "^0.1.5",
		"sharp-ico": "^0.1.5",
		"stripe": "^17.4.0"
	},
	"devDependencies": {
		"@aws-sdk/client-cloudfront": "3.699.0",
		"@aws-sdk/client-s3": "3.699.0",
		"@aws-sdk/client-ses": "3.699.0",
		"@iconify-json/mdi": "^1.2.1",
		"@lexical/dragon": "^0.20.1",
		"@lexical/history": "^0.20.1",
		"@lexical/selection": "^0.20.1",
		"@lexical/utils": "^0.20.1",
		"@playwright/test": "^1.49.0",
		"@sveltejs/adapter-node": "^5.2.9",
		"@sveltejs/kit": "^2.9.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.1",
		"@types/eslint": "^9.6.1",
		"@types/jsdom": "^21.1.7",
		"@types/libmime": "^5.0.3",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.16.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.12.0",
		"marked": "^15.0.3",
		"postcss": "^8.4.49",
		"prettier": "^3.4.1",
		"prettier-plugin-svelte": "^3.3.2",
		"prettier-plugin-tailwindcss": "^0.6.9",
		"prisma": "^6.0.0",
		"svelte": "^5.2.11",
		"svelte-check": "^4.1.0",
		"sveltekit-superforms": "^2.20.1",
		"tailwindcss": "^3.4.15",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.16.0",
		"unplugin-icons": "^0.20.2",
		"vite": "^6.0.1",
		"vitest": "^2.1.6",
		"zod": "^3.23.8"
	}
}
